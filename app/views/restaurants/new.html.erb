<h1>New Restaurant</h1>

<%= form_with model: @restaurant, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :address %>
    <%= form.text_area :address %>
  </div>

  <div>
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>

  <div>
    <%= form.label :category %>
    <%= form.select :category, options_for_select(['chinese', 'italian', 'japanese', 'french', 'belgian']) %>
  </div>

  <div>
    <%= form.submit "Create Restaurant" %>
  </div>
<% end %>

<%= link_to 'Back', restaurants_path %>
