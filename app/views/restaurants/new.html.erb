<br><br>

<div class="container">
  <h1 class="text-center mb-4">New Restaurant</h1>

  <%= form_with model: @restaurant, local: true do |form| %>

    <!-- Error messages -->
    <% if @restaurant.errors.any? %>
      <div id="error_explanation" class="alert alert-danger text-center mb-4">
        <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>
        <ul>
          <% @restaurant.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Restaurant Name -->
    <div class="form-group text-center mb-4">
      <%= form.label :name, class: 'btn btn-dark w-50 mx-auto text-left' %>
      <%= form.text_field :name, class: 'form-control w-50 mx-auto' %>
    </div>

    <!-- Restaurant Address -->
    <div class="form-group text-center mb-4">
      <%= form.label :address, class: 'btn btn-dark w-50 mx-auto text-left' %>
      <%= form.text_area :address, class: 'form-control w-50 mx-auto' %>
    </div>

    <!-- Restaurant Phone Number -->
    <div class="form-group text-center mb-4">
      <%= form.label :phone_number, class: 'btn btn-dark w-50 mx-auto text-left' %>
      <%= form.text_field :phone_number, class: 'form-control w-50 mx-auto' %>
    </div>

    <!-- Restaurant Category -->
    <div class="form-group text-center mb-4">
      <%= form.label :category, class: 'btn btn-dark w-50 mx-auto text-left' %>
      <%= form.select :category, options_for_select(['chinese', 'italian', 'japanese', 'french', 'belgian']), {}, class: 'form-control w-50 mx-auto' %>
    </div>

    <!-- Submit Button -->
    <div class="form-group text-center mb-4">
      <%= form.submit "Create Restaurant", class: 'btn btn-primary w-50' %>
    </div>

  <% end %>

  <!-- Back to List Button -->
  <div class="text-center">
    <%= link_to 'Back to List', restaurants_path, class: 'btn btn-secondary w-50' %>
  </div>
</div>
